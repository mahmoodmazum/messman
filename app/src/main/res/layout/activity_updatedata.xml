<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/background2"
    tools:context=".updatedata">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="vertical">

        <com.google.android.gms.ads.AdView xmlns:ads="http://schemas.android.com/apk/res-auto"
            android:id="@+id/adView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            ads:adSize="BANNER"
            ads:adUnitId="@string/ads"></com.google.android.gms.ads.AdView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="10dp"
            android:text="তারিখ"
            android:textColor="#8cd3ec"
            android:textSize="20sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:layout_marginBottom="10dp"
            android:layout_marginStart="10dp"
            android:background="@drawable/edit_round">

            <TextView
                android:id="@+id/dateupdate"
                android:layout_width="300dp"
                android:layout_height="40dp"
                android:gravity="center"
                android:text="তারিখ প্রবেশ করুন"
                android:textColor="#8cd3ec" />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="10dp"
            android:text="নাম"
            android:textColor="#8cd3ec"
            android:textSize="20sp"
            android:textStyle="bold" />

        <android.support.design.widget.TextInputLayout
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:layout_marginBottom="10dp"
            android:layout_marginStart="10dp"
            android:background="@drawable/edit_round"
            android:textColorHint="#8cd3ec">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/fixnamup"
                android:layout_width="300dp"
                android:layout_height="20dp"
                android:background="@android:color/transparent"
                android:gravity="center"
                android:hint="নাম প্রবেশ করুন"
                android:inputType="textLongMessage"
                android:maxLines="1"
                android:singleLine="true" />
        </android.support.design.widget.TextInputLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="10dp"
            android:text="মিল সংখ্যা"
            android:textColor="#8cd3ec"
            android:textSize="20sp"
            android:textStyle="bold" />

        <android.support.design.widget.TextInputLayout
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:layout_marginBottom="10dp"
            android:layout_marginStart="10dp"
            android:background="@drawable/edit_round"
            android:textColorHint="#8cd3ec">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/fixmealup"
                android:layout_width="300dp"
                android:layout_height="20dp"
                android:background="@android:color/transparent"
                android:gravity="center"
                android:hint="মিল সংখ্যা প্রবেশ করুন"
                android:inputType="numberDecimal|numberSigned"
                android:maxLines="1"
                android:singleLine="true" />
        </android.support.design.widget.TextInputLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="10dp"
            android:text="কত নাম্বার আইডি আপডেট করতে চান"
            android:textColor="#8cd3ec"
            android:textSize="20sp"
            android:textStyle="bold" />

        <android.support.design.widget.TextInputLayout
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:layout_marginBottom="10dp"
            android:layout_marginStart="10dp"
            android:background="@drawable/edit_round"
            android:textColorHint="#8cd3ec">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/updateidno"
                android:layout_width="300dp"
                android:layout_height="20dp"
                android:background="@android:color/transparent"
                android:gravity="center"
                android:hint="আইডি নাম্বার"
                android:inputType="numberSigned"
                android:maxLines="1"
                android:singleLine="true" />
        </android.support.design.widget.TextInputLayout>


        <Button
            android:id="@+id/btnupdate"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_marginBottom="30dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/edit_round"
            android:text="সাবমিট করুন"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textupdate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#ffffff"
            android:textStyle="bold" />
    </LinearLayout>

</ScrollView>